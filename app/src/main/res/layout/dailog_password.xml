<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.darwinbark.fabcustomer.utils.CustomTextViewBold
                android:id="@+id/ctvbTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/password_change"
                android:textColor="@color/black_off"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                app:tint="@color/red" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/old_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_14sdp" />

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_old_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_12sdp" />

            <com.darwinbark.fabcustomer.utils.CustomEditText
                android:id="@+id/etOldPassD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/_13sdp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray" />

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/new_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_14sdp" />

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_new_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_12sdp" />

            <com.darwinbark.fabcustomer.utils.CustomEditText
                android:id="@+id/etNewPassD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/_13sdp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray" />

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/new_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_14sdp" />

            <com.darwinbark.fabcustomer.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_new_password"
                android:textColor="@color/black_off"
                android:textSize="@dimen/_12sdp" />

            <com.darwinbark.fabcustomer.utils.CustomEditText
                android:id="@+id/etConfrimPassD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:text="" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.darwinbark.fabcustomer.utils.CustomTextViewBold
                android:id="@+id/tvYesPass"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/black_off"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>